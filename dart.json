        "isFileTemplate": true,
        "prefix": "!Logging_Setup",
        "body": [
            "import 'dart:io';",
            "import 'package:logger/logger.dart';",
            "import 'package:path_provider/path_provider.dart';",
            "import 'dart:developer' as developer;",
            "import 'package:package_info_plus/package_info_plus.dart';",
            "",
            "late AppLogger logger;",
            "",
            "/// Initialize a file logger by creating the log file in the app's documents directory.",
            "/// If failed or empty logger will only log to devtools",
            "///! Call this in main() before using the logger.",
            "Future<void> initializeLogger(PrettyPrinter? printer) async {",
            "  printer ??= PrettyPrinter(",
            "\tcolors: false,",
            "\tnoBoxingByDefault: true,",
            "\tprintEmojis: false,",
            "  );",
            "  try {",
            "\tPackageInfo packageInfo = await PackageInfo.fromPlatform();",
            "\tString appName = packageInfo.appName; // e.g., \"My Awesome App\"",
            "\tString sanitizedAppName = appName.replaceAll(RegExp(r'[<>:\"/\\\\|?*]'), '_');",
            "\tDirectory documentsDir = await getApplicationDocumentsDirectory();",
            "\tfinal logsDir = Directory('${documentsDir.path}/\\$sanitizedAppName/logs');",
            "\tdeveloper.log(",
            "\t  \"log directory is ${logsDir.path}\",",
            "\t  name: \"logger\",",
            "\t  level: 800,",
            "\t);",
            "\t// Create logs directory if it doesn't exist",
            "\tif (!await logsDir.exists()) {",
            "\t  developer.log(",
            "\t\t\"Creating directory ${logsDir.path}\",",
